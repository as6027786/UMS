@model User_Management_System.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <h2 style="text-align:center; color:white">Login</h2>
    <form asp-action="Login" asp-controller="Account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Role" type="hidden" class="form-control" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailOrUsername">Username Or Email</label>
            <input asp-for="EmailOrUsername" class="form-control" />
            <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
            </div>
        </div>

        <button style="margin-bottom: 10px" type="submit" class="btn btn-primary">Login</button>
    </form>
    <a style= "margin-bottom: 10px"class="btn btn-secondary" asp-area="" asp-controller="Account" asp-action="SignUpPage">Register New User</a>&nbsp;
    <a style="margin-bottom: 10px" class="btn btn-secondary" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a>
</div>

